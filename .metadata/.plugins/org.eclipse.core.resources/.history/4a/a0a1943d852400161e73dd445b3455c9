package cn.edu.buaa.springmvc.service;

import org.springframework.stereotype.Service;
import org.springframework.web.servlet.ModelAndView;

@Service
public class LoginService {
	public ModelAndView doLogin(String loginPageUrl, String sucesspageUrl, String uname, String upasswd) {
		
		if(uname == null || uname.equals("")) {
			return new ModelAndView(loginPageUrl, "error", "用户名不能为空");
		}
		
		if(upasswd == null || upasswd.equals("")) {
			return new ModelAndView(loginPageUrl, "error", "密码不能为空");
		}
		
		
		
		return null;
	}
}
